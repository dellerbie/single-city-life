<div id="filters">
	
    <input type="hidden" id="x-history-field" />
    <iframe id="x-history-frame"></iframe>

	<h2>Profile Search</h2>
	<div class="filter">
		<h4 class="title">Username</h4>
		<form id="usernameForm" name="usernameForm" method="GET" action="#">
			<input type="text" name="username" id="usernameInput"/>
			<input type="submit" class="submit" value="Search"/>
		</form>
	</div>
	<% form_tag({:action => 'filter'}, {:id => 'filtersForm'}) do %>
		<div class="filter">
			<h4 class="title">Gender</h4>
			
			<input type="checkbox" name="gender[]" value="<%= User::VALID_GENDERS[0] %>"/>
			<%= label_tag("gender[]", "M") %>
			
			<input type="checkbox" name="gender[]" value="<%= User::VALID_GENDERS[1] %>"/>
			<%= label_tag("gender[]", "F") %>
		</div>
		<div class="filter">
			<h4 class="title">Age</h4>
			<%= select_tag(:age_begin, options_for_select(User::VALID_AGES)) %> to 
			<%= select_tag(:age_end, options_for_select(User::VALID_AGES)) %>
		</div>
		<div class="filter">
			<h4 class="title">Body Type</h4>		
			<% Profile::BODY_TYPES.each do |type| %>
				<input type="checkbox" name="body_type[]" value="<%= type %>"/>
				<%= label_tag("body_type[]", type) %><br/>
			<% end %>
		</div>
		<div class="filter">
			<h4 class="title">Best Feature</h4>
			<% Profile::BEST_FEATURES.each do |feature| %>
				<input type="checkbox" name="best_feature[]" value="<%= feature %>"/>
				<%= label_tag("best_feature[]", feature) %><br/>
			<% end %>
		</div>
		<div class="filter">
			<h4 class="title">Ethnicity</h4>
			<% Profile::ETHNICITIES.each do |ethnicity| %>
				<input type="checkbox" name="ethnicity[]" value="<%= ethnicity %>"/>
				<%= label_tag("ethnicity[]", ethnicity) %><br/>
			<% end %>
		</div>
		<div class="filter last">
			<h4 class="title">Has Pic?</h4>
			<%= radio_button_tag (:has_pic, "y") %>
			<%= label_tag(:has_pic, "Y") %>
			
			<%= radio_button_tag (:has_pic, "n") %>
			<%= label_tag(:has_pic, "N") %>
			
			<%= submit_tag "Show", :class => 'submit' %>
		</div>
	<% end %>
	<div class="clearfix"></div>
</div>